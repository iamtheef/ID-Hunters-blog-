<%include header%>
<div class="prof_back">
</div>
	<div class="container mt-4">
		<div class="row">
			<% if (user.posts && user.posts.length>0){ %>
					<% user.posts.forEach((post)=>{ %>
				<div class="col-3 posts">
						<img class="img-thumbnail" src="<%= post.image %>" >
						<a href="/show/<%= post._id %>"><p> 
						<%= post.artist %> <strong> - </strong> 
						<%= post.title %></p></a>	
				</div>
						<%});%>
				<% }else{ %>			
		</div>
	</div>
				<h1 class="noPosts" style="margin-top: -30px;">Wow, this user has no posts yet!</h1>
				<div class="row pl-2">
					<div style="margin-top: -10px; margin-left: 20px; margin-bottom: 5px;"><a onclick="history.back()">
						<button class="btn btn-outline-dark"> Go Back</button></a>
					</div>
				</div>
				<img style="width:100%; max-height: 580px; opacity: 0.7;" src="https://media1.giphy.com/media/26BRxLmNGpvn4MCGs/giphy.gif?cid=790b76111cfa31a5b43b0d404d7f38a85b365b9a45019d08&rid=giphy.gif">
