<%include header%>
	<div class="container mt-4">
			<% if (user.posts && user.posts.length>0){ %>
				<div class="row-6">
					<% user.posts.forEach((post)=>{ %>
			<div class="section">
				<a href="/show/<%= post._id %>"><h2> 
						<%= post.artist %> <strong> - </strong> 
						<%= post.title %></h2></a>
				<p>Submitted <%= moment(post.createdAt).fromNow()%></p>
				<div class="col-6">
			<%if (post.link.includes("youtube")){%>
			<iframe width="210%" height="200" src="<%=post.link%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope;" allowfullscreen></iframe>
			<%}else if(post.link.includes("soundcloud")){%>
					<iframe width="210%" height="200" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=<%= post.link%>&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true">
					</iframe>
			<%}else if (post.link.includes("facebook")){ %>
				<iframe src="https://www.facebook.com/plugins/video.php?href=<%= post.link%>&show_text=0&width=560" width="210%" height="315" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allowFullScreen="true"></iframe>
			<% }else {%>
    				<iframe src="<%= post.link%>"width="210%" height="200"></iframe> 
    				<p>This seems not to be working properly. Click bellow to see the page.</p>
    				<button class="btn btn-outline-dark"><a href="<%= post.link%>">Click here to go to the page</a>
    				</button>
			<%}%>
			<div style="margin-bottom: 100px;"></div>
		</div>

			<%});%>
				
				<div style="margin-top: -10px; margin-left: 20px; margin-bottom: 5px;"><a onclick="history.back()">
						<button class="btn btn-outline-dark"> Go Back</button></a>
					</div>				
			
		</div>


				<% }else{ %>			
		</div>
	</div>
				<h1 class="noPosts" style="margin-top: -30px;">Wow, you have no posts yet!</h1>
				<div class="row pl-2">
					<div style="margin-top: -10px; margin-left: 20px; margin-bottom: 5px;"><a onclick="history.back()">
						<button class="btn btn-outline-dark"> Go Back</button></a>
					</div>
				</div>
				<img style="width:100%; max-height: 580px; opacity: 0.7;" src="https://media1.giphy.com/media/26BRxLmNGpvn4MCGs/giphy.gif?cid=790b76111cfa31a5b43b0d404d7f38a85b365b9a45019d08&rid=giphy.gif">
			<%}%>



	

